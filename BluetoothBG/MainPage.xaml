<Page
    x:Class="BluetoothBG.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BluetoothBG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="startServerButton" Content="Start Background Server" HorizontalAlignment="Center" Margin="10" Click="startServerButton_Click" Width="200"/>
            <Button x:Name="findDevices" Content="Find Devices" HorizontalAlignment="Center" Click="findDevices_Click" Margin="10" Width="200"/>
            <Button x:Name="sendMessage" Content="Send Message" HorizontalAlignment="Center" Click="sendMessage_Click" Margin="10" Width="200"/>
            <Button x:Name="registerBackgroundWorker" Content="Register BG Worker" HorizontalAlignment="Center" Margin="10" Click="registerBackgroundWorker_Click" Width="200"/>
            <Button x:Name="fetchReceivedMessage" Content="Fetch Received Message" HorizontalAlignment="Center" Click="fetchReceivedMessage_Click" Margin="10" Width="200"/>
            <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
